<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">New theme park:</h1>
    </div>

    <div class="col-md-6">

      <form action="/parks/new" method="POST">
        <div class="form-group">
          <label for="name-input">Name:</label>
          <input name="name" type="text" class="form-control" id="name-input">
        </div>
        <div class="form-group">
          <label for="description-input">Description:</label>
          <input name="description" type="text" class="form-control" id="description-input">
        </div>

        <button type="submit" class="btn btn-dark">Add new park</button>
      </form>
    </div>

  </div>
</div>
